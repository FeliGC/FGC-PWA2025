@model FGC_PWA2025.Models.Pelicula
<body style="background-color: #f5f5dc;">

@if (Model.ID == 0)
{
	<h1>Crear Nueva Pelicula</h1>
} else
{
	<h1>Editar Pelicula</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Detalle" asp-controller="Editar" method="post">
            <input type="hidden" asp-for="ID" />
                <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-2">
                <label class="form-label" asp-for="Titulo">Titulo de la Pelicula</label>
                <input type="text" class="form-control form-control-sm" asp-for="Titulo" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Genero">Genero</label>
                <input type="text" class="form-control form-control-sm" asp-for="Genero" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Fecha">Fecha</label>
                <input type="number" class="form-control form-control-sm" asp-for="Fecha" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Duracion">Duracion</label>
                <input type="text" class="form-control form-control-sm" asp-for="Duracion" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Costo">Costo</label>
                <input type="number" class="form-control form-control-sm" asp-for="Costo" />
            </div>
            <div class="mb-2">
                @if (Model.ID == 0)
                {
                    <button class="btn btn-success" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary" type="submit">Actualizar</button>
                }
                <a class="btn btn-info" asp-action="Editar" asp-controller="Editar">Volver</a>
            </div>
        </form>
    </div>
</div>
</body>